<!-- boostrap carousel code from https://getbootstrap.com/docs/4.0/components/carousel/ and adapted for use with this website -->
<!-- creates carousel div and data-target attribute contains a CSS selector that points to the HTML element that will be changed
it slideshows through content using 3D CSS transforms and Javascript, the data-slide attribute alters the carousel slide position
relative to its current position
-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <!-- images for use in carousel -->
    <div class="carousel-item active">
      <img class="d-block w-100" src="images/image1.png" alt="First slide" title="Photo from https://stocksnap.io/">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="images/image2.png" alt="Second slide" title="Photo from https://www.foodiesfeed.com">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="images/image3.png" alt="Third slide" title="Photo from https://www.foodiesfeed.com">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>
